<div class="row">
  <div class="col-md-8 col-md-offset-1">
    <div class="panel panel-primary">
      <div class="panel-heading" style="background-color: #5d6f96;border-color: #14137c">
        <h3 class="panel-title" >Update Approver Category</h3>
      </div>

      <div class="panel-body">
        <%= simple_form_for(@approvers_category, remote: true) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :category_name, label: 'Group Name', required: true, autofocus: true, input_html:{class:"form-control"} %>
            <%= f.input :client_code, label: 'Client', collection: @clients, label_method: :company_name, value_method: :id, required: true, autofocus: true, input_html:{class:"form-control"} %>
            <%= f.label :leveled, "Leveled" %>
            <%= f.check_box :leveled %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Submit",class: "btn btn-primary", style: "width:auto" %>
            <%= link_to 'Back', request.referer,class: "btn btn-danger", style: "width:auto", remote: true %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
