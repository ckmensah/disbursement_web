<div class="w3-container col-md-8 col-md-offset-2">
  <%= simple_form_for(@transaction, :remote => true, html: {autocomplete: 'off'}) do |f| %>
    <%= f.error_notification %>


    <div style="float: left; width: 100%;">
      <div class="row">
        <div class="col-md-3" style="padding-right: 4px">
          <%= f.input :rec_name, label: false, required: true, autofocus: true, placeholder: "Recipient Name", input_html: {class: "form-control", style: "padding-left: 0; padding-right: 2px"} %>
        </div>

        <div class="col-md-3" style="padding-right: 4px">
          <%= f.input :mobile_num, label: false, required: true, autofocus: true, placeholder: "Mobile Number", input_html: {class: "form-control", style: "padding-left: 0; padding-right: 2px"} %>
        </div>
        <div class="col-md-2" style="padding-left: 4px; padding-right: 4px">
          <%= f.input :netwk, label: false, collection: ["AIR", "MTN", "VOD", "TIG"].insert(0, '--network--'), selected: 0, placeholder: "Network", required: true, autofocus: true, input_html: {class: "form-control", style: "padding-left: 0; padding-right: 2px"} %>
        </div>
        <div class="col-md-2" style="padding-left: 4px; padding-right: 4px">
          <%= f.input :amt, label: false, required: true, autofocus: true, placeholder: "Amount", input_html: {class: "form-control", style: "padding-left: 0; padding-right: 2px"} %>
        </div>
        <div class="col-md-2" style="padding-left: 4px; padding-right: 0px">
          <%# unless @recipient.persisted? %>
          <%#= f.input :group_id, as: :hidden, input_html:{value: @group_id, class:"form-control", style: "padding-left: 0; padding-right: 2px"}%>
          <%# end %>

          <%# pass it on  %>
        </div>

        <%#= f.input :user_id, as: :hidden , input_html:{value: current_user.id } %>
        <%= f.input :client_code, as: :hidden, input_html: {value: current_user.client_code} %>
        <%= f.input :disburse_status, as: :hidden, input_html: {value: 0} %>

        <div class="col-md-2 form-actions" style="padding-right: 0">
          <%# if @recipient.persisted? %>
          <%#= f.button :submit, "Edit",class: "btn btn-primary", style: "width:auto" %>
          <%# else %>
          <%= f.button :submit, "Add", class: "btn btn-primary", style: "width:auto" %>
          <%# end %>
        </div>
      </div>
    </div>


  <% end %>
</div>
