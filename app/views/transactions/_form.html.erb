<%= simple_form_for(@transaction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :mobile_number %>
    <%= f.input :amount %>
    <%= f.input :trans_type %>
    <%= f.input :status %>
    <%= f.input :network %>
    <%= f.input :transaction_ref_id %>
    <%= f.input :balance %>
    <%= f.input :trnx_type %>
    <%= f.input :err_code %>
    <%= f.input :nw_resp %>
    <%= f.input :user_id %>
    <%= f.input :is_reversal %>
    <%= f.input :voucher_code %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
