<div class="center">
  <center>

    <br/>
    <div class="row">
      <div class="col-md-8  col-md-offset-1">


        <fieldset>
          <legend>Recipients</legend>

          <table class="table table-striped table-hover table-bordered">

            <tr id="head">

              <th>Mobile number</th>
              <th>Network</th>
              <th>Amount</th>
              <% if current_user.is_client && @user_app.needs_approval %>
                <th>Group</th>
              <% elsif current_user.is_client && !@user_app.needs_approval %>
              <% else %>
                <th>Group</th>
              <% end %>

              <th colspan="1"></th>
            </tr>
            <% @recipients.each do |recipient| %>

              <tr>
                <td><%= recipient.mobile_number %></td>
                <td><%= recipient.network %></td>
                <td><%= recipient.amount %></td>
                <% if current_user.is_client && @user_app.needs_approval %>
                  <td><%= recipient.group_id %></td>
                <% elsif current_user.is_client && !@user_app.needs_approval %>
                <% else %>
                  <td><%= recipient.group_id %></td>
                <% end %>
                <!--<td><%#= recipient.user_id %></td>-->
                <!--<td><%#= link_to 'Show', recipient , class:'"btn btn-success btn-sm btn3d"'%></td>-->
                <td><%= link_to 'Edit', edit_recipient_path(recipient), class: '"btn btn-primary btn-sm btn3d"' %></td>
              </tr>
            <% end %>
          </table>
          <%= link_to 'New', new_recipient_path, class: 'btn btn-primary pull-left' %>

          <%#= link_to 'New', new_recipient_path, class:'btn btn-primary pull-left'%>

        </fieldset>
        <%#= will_paginate @recipients %>
      </div>
    </div>
  </center>
</div>