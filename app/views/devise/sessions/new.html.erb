<div class="d-md-flex flex-row-reverse">
  <div class="signin-right">

    <div class="signin-box">
      <h3 class="signin-title-secondary">Sign in to continue.</h3>
      <%= simple_form_for(resource,html: { autocomplete: 'off' }, as: resource_name, url: session_path(resource_name), id:"loginform", class: "form-horizontal", role: "form") do |f| %>

        <div class="form-group">
          <input id="login-username" type="text" class="form-control" name="user[username]" value="" placeholder="Username">
        </div>

        <div class="form-group">
          <input id="login-password" type="password" class="form-control" name="user[password]" placeholder="Password">
          <%#= f.input :password, required: false %>
        </div>

        <%#= link_to "Forgot your password?", new_user_password_path %><br />
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

<!--        <div style="margin-top:10px" class="form-group">-->
          <!-- Button -->

<!--          <div class="col-sm-12 controls">-->
            <%= f.button :submit, "Login" , class: "btn btn-primary btn-block btn-signin", style:"background-color: #f95f35 !important;",data: { disable_with: "Please wait..." }%>
            <!--<a id="btn-login" href="#" class="btn btn-success">Login  </a>-->

<!--          </div>-->
<!--        </div>-->
      <% end %>

    </div>

  </div><!-- signin-right -->
  <div class="signin-left">
    <div class="signin-box">
      <h2 class="slim-logo"><span style="color:#fff">appsNmobile Bulk Disbursement Portal</span></h2>



    </div>
  </div><!-- signin-left -->
</div><!-- d-flex -->

